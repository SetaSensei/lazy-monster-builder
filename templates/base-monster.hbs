<div class="flexcol lmb-dialog-tab">
    <div class="flex0">
        <header>
            <h2>Select CR and monster type</h2>
        </header>
    </div>
    <div class="flex0" id="lmb-fullcr">
        <div class="flexrow">
            <select id="cr-value" name="crValue">
                {{#each options.stats}}
                    <option value="{{this.CR}}" data-pab="{{this.PAB}}" data-noa="{{this.NoA}}" data-hp="{{this.HP}}"
                        data-dmg="{{this.DpACalc}}" data-ac="{{this.ACDC}}" data-exp="{{this.example}}">CR: {{this.CR}}
                        ({{this.example}})
                    </option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="flex0">
        <div class="flexrow">
            <label for="monster-type">Foe Type :</label>
            <select id="monster-type" name="monsterType">
                {{#each options.type}}
                    <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="flex0">
        <header>
            <h2>Or select a base stat block</h2>
        </header>
    </div>
    <div class="flex0">
        <div class="flexrow">
            <label for="monster-stat-block">Stat block :</label>
            <select id="monster-stat-block" name="statBlock">
                <option value="none">-- None --</option>
                {{#each options.statBlocks}}
                    <option value="{{this.name}}" 
                        data-str="{{this.abilities.str.value}}" 
                        data-dex="{{this.abilities.dex.value}}"
                        data-con="{{this.abilities.con.value}}"
                        data-int="{{this.abilities.int.value}}"
                        data-wis="{{this.abilities.wis.value}}"
                        data-cha="{{this.abilities.cha.value}}">CR: {{this.cr}} - {{this.name}}</option>
                {{/each}}
            </select>
        </div>
    </div>
</div>